
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
<style>
    #card{
        text-align:right;
        display: block;
    }
</style>
<div class="row">
    <div class="col-lg-3 col-md-6 col-sm-6">
        <div class="card card-stats">
            <a class="nav-link pull-right" href="@Url.Action("ListarDisciplina", "Grade")">
                <div class="card-header card-header-warning card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">assignment</i>
                    </div>
                    <h3 class="card-title">
                        Disciplina
                        @*<small>GB</small>*@
                    </h3>
                </div>
                <div class="card-footer" id="card" style="padding:0;margin-bottom:0">
                    <div>
                        <i class="material-icons" style="font-size:60px">
                            keyboard_arrow_right
                        </i>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 col-sm-6">
        <div class="card card-stats">
            <a class="nav-link pull-right" href="@Url.Action("ListarCurso", "Grade")">
                <div class="card-header card-header-warning card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">account_balance</i>
                    </div>
                    <h3 class="card-title">
                        Curso
                        @*<small>GB</small>*@
                    </h3>
                </div>
                <div class="card-footer" id="card" style="padding:0;margin-bottom:0">
                    <div>
                        <i class="material-icons" style="font-size:60px">
                            keyboard_arrow_right
                        </i>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 col-sm-6">
        <div class="card card-stats">
            <a class="nav-link pull-right" href="@Url.Action("ListarMatriz", "Grade")">
                <div class="card-header card-header-warning card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">dashboard</i>
                    </div>
                    <h3 class="card-title">
                        Matriz
                        @*<small>GB</small>*@
                    </h3>
                </div>
                <div class="card-footer" id="card" style="padding:0;margin-bottom:0">
                    <div>
                        <i class="material-icons" style="font-size:60px">
                            keyboard_arrow_right
                        </i>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
