@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="wrapper wrapper-full-page">
    <div class="page-header login-page header-filter" filter-color="black">
        <div class="container">
            <div class="col-lg-4 col-md-6 col-sm-6 ml-auto mr-auto">
                @using (Html.BeginForm( "Login","Login", FormMethod.Post))
                {
            
                    <div class="card card-login" style="margin: 100% auto">
                        <div class="card-header card-header-primary text-center">
                            <h4 class="card-title">MiniSIGA</h4>
                        </div><div class="card-body">
                            <span class="bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">perm_identity</i>
                                        </span>
                                    </div>
                                    <input class="form-control" name="usuario" placeholder="Usuário AD" type="text">
                                </div>
                            </span>
                            <span class="bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">vpn_key</i>
                                        </span>
                                    </div>
                                    <input class="form-control" name="senha" placeholder="Senha" type="password">
                                </div>
                            </span>
                        </div>
                        <div class="card-footer justify-content-center">
                            <button class="btn btn-primary btn-link" type="submit">LOGIN</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>